@model Journal

<h1>Редактирование записи</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="StudentFullName">ФИО студента</label>
        <input asp-for="StudentFullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SubjectName">Название предмета</label>
        <input asp-for="SubjectName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Comment">Комментарий</label>
        <input asp-for="Comment" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Grade">Оценка</label>
        <input asp-for="Grade" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date">Дата</label>
        <input asp-for="Date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>
