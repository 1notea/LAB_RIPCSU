@model IEnumerable<Journal>

<h1>Журнал</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Создать запись</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Поиск по имени студента" name="studentName">
        <button type="submit" class="btn btn-primary">Поиск</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ФИО студента</th>
            <th>Название предмета</th>
            <th>Комментарий</th>
            <th>Оценка</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var journal in Model)
        {
            <tr>
                <td>@journal.StudentFullName</td>
                <td>@journal.SubjectName</td>
                <td>@journal.Comment</td>
                <td>@journal.Grade</td>
                <td>@journal.Date</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@journal.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@journal.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
